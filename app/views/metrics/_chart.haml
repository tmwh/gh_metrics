.bar-primary
  .title Cumulative flow diagram
.row
  .col.s12
    #line-chart.ct-chart{ data: { collection: @grouped_events_carrier.collection,
                                  label_colors: @grouped_events_carrier.label_colors,
                                  days: @grouped_events_carrier.days } }

- content_for :after_content do
  .container
    .bar-primary
      .title Issue today
    .chart-wrapper
      #pie-chart.ct-chart{ data: { collection: @grouped_events_carrier.collection_today,
                                   label_colors: @grouped_events_carrier.label_colors_today } }
